package notebook.gl.uvsq.notebook.gl;

public class Notebook {
	private void printJansiMenuDemo() {
		System.out.println();
		System.out.println();
		System.out.println();
		Reader in = new InputStreamReader(getResourceAsStream("menu.txt"));
		try {
			char[] buf = new char[1024];
			int l = 0;
			try {
				while ((l = in.read(buf)) >= 0) {
					for (int i = 0; i < l; i++) {
						AnsiConsole.out.print(Ansi.ansi().fg(Color.YELLOW).a(buf[i]).reset());
					}
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
		} finally {
			closeQuietly(in);
		}

	}

	private static void printJansiLogoDemo() throws IOException {
		Reader in = new InputStreamReader(StartScreen.class.getResourceAsStream("logo.txt"));
		try {
			char[] buf = new char[1024];
			int l = 0;
			while ((l = in.read(buf)) >= 0) {
				for (int i = 0; i < l; i++) {
					AnsiConsole.out.print(Ansi.ansi().fg(Color.CYAN).a(buf[i]).reset());
				}
			}
		} finally {
			closeQuietly(in);
		}
	}
}
